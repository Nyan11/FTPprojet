 * TP JAVA RIP
 * Min Client FTP
 * */
package cda.projet.client;

import java.io.BufferedInputStream;
import java.io.BufferedReader;
import java.io.FileOutputStream;
import java.io.InputStreamReader;
import java.io.PrintStream;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) throws Exception {
		System.out.println("Le Client FTP");

		Socket socket = new Socket("localhost", 2121);

		BufferedReader br = new BufferedReader(new InputStreamReader(socket.getInputStream()));
		PrintStream ps = new PrintStream(socket.getOutputStream());

		Scanner sc = new Scanner(System.in);

		String response = "";
		String message = "";

		while(!(message.equals("bye"))) {
			do {
				response = br.readLine();
				System.out.println(">> " + response);
			} while(response.charAt(0) == '1');
			message = sc.nextLine();
			ps.println(message);
			if(message.split(" ")[0].equals("get")) {
				do {
					response = br.readLine();
					System.out.println(">> " + response);
				} while(response.charAt(0) == '1');
			}
			if(response.charAt(0) == '0') {
				int port;
				port = Integer.getInteger(response.split(" ")[3]);
				Socket socketGet = new Socket("localhost", port);
				FileOutputStream fos = new FileOutputStream(new BufferedInputStream(socketGet.getInputStream()));
			}
		}
		ps.println("bye");	
		socket.close();
		sc.close();
	}

}
