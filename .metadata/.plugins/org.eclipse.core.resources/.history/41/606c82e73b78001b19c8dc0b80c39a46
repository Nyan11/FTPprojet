package cda.ftp.ihm.components;

import java.io.FileInputStream;
import java.io.FileNotFoundException;

import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.layout.VBox;
import javafx.scene.text.Text;
import javafx.scene.text.TextAlignment;

public class FTPiconView {
	public VBox generateView() {
		VBox mainBox = new VBox();
		Text fileName = new Text("this is a test a very loooooooooooooooooong test. Indeed it is way too long for a normal name");
		fileName.setWrappingWidth(64);
		fileName.setTextAlignment(TextAlignment.CENTER);
		
		FileInputStream input = null;
		try {
			input = new FileInputStream("resources/icons/folder.png");
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		Image image = new Image(input, 64, 64, false, false);
		ImageView imageView = new ImageView(image);
		
		mainBox.getChildren().add(imageView);
		mainBox.getChildren().add(fileName);
		
		return mainBox;
	}
}
