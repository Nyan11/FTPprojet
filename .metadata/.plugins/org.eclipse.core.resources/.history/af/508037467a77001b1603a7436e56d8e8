package cda.projet.serveur;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintStream;
import java.net.Socket;

import cda.projet.serveur.commande.CommandExecutor;

public class WorkerClient extends WorkerRunnable {

	@Override
	public void run() {
		BufferedReader br = null;
		PrintStream ps = null;
		String commande = "";
		try {
			try {
				br = new BufferedReader(new InputStreamReader(this.getClientSocket().getInputStream()));
				ps = new PrintStream(this.getClientSocket().getOutputStream());
	
				ps.println("1 Bienvenue ! ");
				ps.println("1 Serveur FTP Personnel.");
				ps.println("0 Authentification : ");
	
				while(!(commande=br.readLine()).equals("bye")) {
					System.out.println(">> "+commande);
					CommandExecutor.executeCommande(ps, commande);
				}
				
				ps.close();
				br.close();
			} catch (NullPointerException e) {
				System.out.println("Deconnexion du client");
				this.getClientSocket().close();
			}
		} catch (IOException e) {
			e.printStackTrace();
		}

	}

}
