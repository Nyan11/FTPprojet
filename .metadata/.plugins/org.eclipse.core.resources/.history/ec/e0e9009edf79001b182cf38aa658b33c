package cda.ftp.ihm.components;


import javafx.geometry.Insets;
import javafx.scene.control.Button;
import javafx.scene.control.TextField;
import javafx.scene.layout.HBox;
import javafx.scene.layout.Priority;

public class FTPdirView {
	public HBox generateView() {
		HBox mainBox = new HBox();
		TextField currentPath = new TextField();
		Button previousButton = new Button("‚Üê");
		
		mainBox.getChildren().add(previousButton);
		mainBox.getChildren().add(currentPath);
		mainBox.setPadding(new Insets(4, 16, 4, 16));
		mainBox.setSpacing(16);
		HBox.setHgrow(currentPath, Priority.ALWAYS);
		
		return mainBox;
	}

}
