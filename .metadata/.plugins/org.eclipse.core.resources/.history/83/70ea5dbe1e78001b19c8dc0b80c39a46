package cda.ftp.ihm.components;

import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.VBox;

public class AppView {
	
	public VBox generateView() {
		VBox mainBox = new VBox();
		VBox titleBox = new VBox();
		VBox userBox = new VBox();
		VBox passBox = new VBox();
		VBox buttonBox = new VBox();
		
		Label title = new Label("FTP");
		Label user = new Label("Username");
		Label pass = new Label("Password");
		
		TextField userField = new TextField();
		TextField passField = new TextField();
		
		Button loginButton = new Button("Log In");
		
		mainBox.getChildren().add(titleBox);
		mainBox.getChildren().add(userBox);
		mainBox.getChildren().add(passBox);
		mainBox.getChildren().add(buttonBox);
		
		titleBox.getChildren().add(title);
		userBox.getChildren().add(user);
		userBox.getChildren().add(userField);
		
		passBox.getChildren().add(pass);
		passBox.getChildren().add(passField);
		
		buttonBox.getChildren().add(loginButton);
		
		return mainBox;
	}
}
