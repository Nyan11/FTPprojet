package cda.ftp.ihm.components;

import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.scene.control.Button;
import javafx.scene.layout.HBox;

public class FTPactionView {
	
	private final static int MIN_WIDTH = 120;

	public HBox generateView() {
		HBox mainBox = new HBox();
		Button downloadButton = new Button("Download");
		Button uploadButton = new Button("Upload");
		
		downloadButton.setMinWidth(MIN_WIDTH);
		uploadButton.setMinWidth(MIN_WIDTH);
		
		mainBox.getChildren().add(uploadButton);
		mainBox.getChildren().add(downloadButton);
		
		mainBox.setAlignment(Pos.BASELINE_RIGHT);
		mainBox.setPadding(new Insets(4));
		mainBox.setSpacing(16);
		
		return mainBox;
	}
}
