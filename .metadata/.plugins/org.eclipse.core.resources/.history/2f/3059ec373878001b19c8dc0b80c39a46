package cda.ftp.ihm.components.icons;

import java.util.Arrays;
import java.util.Collections;
import java.util.HashMap;
import java.util.HashSet;
import java.util.Map;
import java.util.Set;

public class IconsUtils {
	
	public static final Map<String, MimeType> ALL_EXTENSION = GET_EXTENSIONS();
	
	public static final Map<MimeType, Set<String>> GET_EXTENSIONS() {
		Map<String, MimeType> map = new HashMap<String, MimeType>();
		
		String[] image_ext = {"png", "jpg", "jpeg", "raw", "r2w"};
		String[] package_ext = {"zip", "rar", "tar", "deb", "jar"};
		String[] pdf_ext = {"pdf"};
		String[] text_ext = {"txt", "odt", "opt"};
		String[] video_ext = {"avi", "mp4", "mpk"};
		
		map.put(MimeType.IMAGE, new HashSet<String>(Arrays.asList(image_ext)));
		map.put(MimeType.PACKAGE, new HashSet<String>(Arrays.asList(package_ext)));
		map.put(MimeType.PDF, new HashSet<String>(Arrays.asList(pdf_ext)));
		map.put(MimeType.TEXT, new HashSet<String>(Arrays.asList(text_ext)));
		map.put(MimeType.VIDEO, new HashSet<String>(Arrays.asList(video_ext)));
		
		return map;
	}
	
	public static boolean hasExtension(String filename) {
		return false;
	}
	
	public static final MimeType getMimeType(String filename, boolean isDir) {
		if(isDir) {
			return MimeType.FOLDER;
		}
		
		return MimeType.NO_EXTENSION;
	}

}
